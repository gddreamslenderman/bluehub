-- LocalScript in StarterPlayer -> StarterPlayerScripts

local Players = game:GetService("Players")

-- Function to create a highlight for a player
local function createHighlight(player)
    -- Ensure the character is loaded
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local highlight = Instance.new("Highlight")
        highlight.Parent = player.Character
        highlight.Adornee = player.Character
        highlight.FillColor = Color3.fromRGB(255, 0, 0)  -- Set highlight color to red
        highlight.FillTransparency = 0.5  -- Set transparency of the highlight
        highlight.OutlineColor = Color3.fromRGB(0, 0, 0)  -- Set outline color to black
        highlight.OutlineTransparency = 0  -- Set outline transparency
    end
end

-- Loop through all players and create highlights
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        -- Give time for character parts to load
        wait(1)
        createHighlight(player)
    end)
end)

-- Also apply highlights to existing players when the script starts
for _, player in ipairs(Players:GetPlayers()) do
    if player.Character then
        createHighlight(player)
    end
end
